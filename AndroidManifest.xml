<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eshare_android_preview"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />
	  
      <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
      <uses-permission android:name="android.permission.INTERNET" />
	  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	  <uses-permission android:name="android.permission.VIBRATE" />
	  <uses-permission android:name="android.permission.CAMERA"/>
	  <uses-feature android:name="android.hardware.camera" />
	  <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
	  <uses-feature android:name="android.hardware.camera.flash" android:required="false"/>
    
    <application
        android:name=".application.EshareApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.base.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.base.tab_activity.MainTabActivity"></activity>
        <activity android:name=".activity.base.tab_activity.HomeActivity"></activity>
        <activity android:name=".activity.base.tab_activity.MessageActivity"></activity>
        <activity android:name=".activity.base.tab_activity.QAActivity"></activity>
        
        <activity android:name=".activity.base.knowledge_net.KnowledgeNetActivity"></activity>
        <activity android:name=".activity.base.knowledge_net.KnowledgeNetItemActivity"></activity>
        <activity android:name=".activity.base.knowledge_net.KnowledgeNetCategoryActivity"></activity>
        
        <activity android:name=".activity.base.questions.KnowledgeNetQuestionActivity"></activity>
        <activity android:name=".activity.base.questions.QuestionShowActivity" android:windowSoftInputMode="stateHidden"></activity>
    
    	<activity android:name=".activity.base.plans.PlansActivity"></activity>
    	<activity android:name=".activity.base.plans.AddPlanActivity"></activity>

    	<activity android:name=".activity.base.notes.NotesActivity"></activity>
    	<activity android:name=".activity.base.notes.AddNoteActivity"></activity>

        <activity android:name=".activity.base.groups.GroupActivity"></activity>
    </application>

</manifest>