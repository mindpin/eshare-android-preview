<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/cell_head_bar" />

    <LinearLayout
        android:layout_below="@+id/head_bar"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:background="#e7e7e7">

        <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:background="#455467"
            android:layout_margin="0dp">

            <TextView
                android:id="@+id/icon_t1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="60dp"
                android:text="@string/icon_comment"
                android:textColor="#4E88EC"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:id="@+id/icon_t2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="50dp"
                android:text="@string/icon_comment"
                android:textColor="#F7CB52"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="70dp"
                />


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/shadow_white_text_light"
                    android:text="四叶草知识助手"
                    android:layout_marginBottom="20dp"
                    android:textSize="20dp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/shadow_white_text_light"
                    android:text="界面演示版 demo-2"
                    android:layout_marginBottom="20dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="240dp"
                    style="@style/shadow_white_text_light"
                    android:layout_marginBottom="20dp"
                    android:text="程序原型:门旭; \n程序开发/素材采集：门旭,李飞,黄锴,肖少富; \n集成:李飞; \n视觉/交互设计:宋亮; "
                    android:textSize="15dp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/shadow_white_text_light"
                    android:text="2013.12"
                    android:layout_marginBottom="20dp"
                    android:textSize="15dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>