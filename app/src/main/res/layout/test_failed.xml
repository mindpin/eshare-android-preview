<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:background="#f1f1f1">

        <RelativeLayout
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_marginRight="90dp"
            android:layout_alignParentLeft="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/avatar"
                android:layout_height="30dp"
                android:layout_width="30dp" />

        </RelativeLayout>

        <com.eshare_android_preview.view.ExperienceView
            android:id="@+id/experience_view"
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:layout_marginLeft="40dp"
            android:fadingEdge="none" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#e7e7e7"
        android:layout_marginTop="50dp"
        ></RelativeLayout>

    <ImageView
        android:id="@+id/panda"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:src="@drawable/fail_panda"
        android:scaleType="centerCrop"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:id="@+id/zaole"
        android:layout_below="@+id/panda"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="噢，糟了"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" />

    <TextView
        android:id="@+id/fail"
        android:layout_below="@+id/zaole"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="练习未能通过"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" />

    <TextView
        android:layout_below="@+id/fail"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="请再接再砺！"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" />

    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:padding="5dp"
        android:layout_alignParentBottom="true">

        <Button
            android:onClick="finish"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:background="@drawable/btn_c98cc27_circle_flat"
            android:text="继续"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#fff"
            android:shadowColor="#22000000"
            android:shadowRadius="1"
            android:shadowDx="1"
            android:shadowDy="1" />

    </RelativeLayout>
</RelativeLayout>