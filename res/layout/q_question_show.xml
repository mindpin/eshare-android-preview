<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/head"
        android:layout_height="80dp"
        android:layout_width="fill_parent">

        <com.eshare_android_preview.base.view.ui.CircleIconView
            android:onClick="back"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_height="50dp"
            android:layout_width="50dp"
            bg_color="#00000000"
            text_color="#666666"
            text_size="20"
            text="&#xf060;" />

        <com.eshare_android_preview.base.view.ui.HealthView
            android:id="@+id/health_view"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp" />

        <com.eshare_android_preview.base.view.ui.CorrectPointView
            android:id="@+id/correct_point_view"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/head"
        android:id="@+id/question_kind_desc"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

        <TextView
            android:id="@+id/question_kind_desc_text_view"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:text="选择一个正确答案"
            android:textSize="20dp"
            android:paddingLeft="13dp"
            android:gravity="center_vertical" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/question_content"
        android:layout_below="@+id/question_kind_desc"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">
        <!-- 问题正文 -->
        <ScrollView
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_above="@+id/question_choices_view">

            <RelativeLayout
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="#fff"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp">

                    <com.eshare_android_preview.base.view.EshareMarkdownView
                        android:id="@+id/question_title"
                        text_size="16"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />
                </LinearLayout>

            </RelativeLayout>

        </ScrollView>


        <!-- 选项 -->
        <com.eshare_android_preview.base.view.QuestionChoicesView
            android:id="@+id/question_choices_view"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:padding="3dp"
            android:layout_marginBottom="-6dp" />
    </RelativeLayout>

    <!-- 正确错误提示 -->
    <com.eshare_android_preview.base.view.QuestionResultView
        android:id="@+id/question_result_view"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:clickable="true"
        android:visibility="gone"
        />

    <!-- 提交按钮 -->
    <com.eshare_android_preview.base.view.ui.QuestionButton
        android:id="@+id/question_button"
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:padding="5dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>