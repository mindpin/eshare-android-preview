<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    >

    <RelativeLayout
        android:id="@+id/head"
        android:layout_height="80dp"
        android:layout_width="fill_parent">

        <com.eshare_android_preview.base.view.ui.FontAwesomeTextView
            android:clickable="true"
            android:onClick="back"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:textColor="#666666"
            android:textSize="20dp"
            android:text="@string/icon_arrow_left"
            />

        <com.eshare_android_preview.base.view.ui.HealthView
            android:id="@+id/health_view"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp" />

        <com.eshare_android_preview.base.view.ui.CorrectPointView
            android:id="@+id/correct_point_view"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_height="30dp"
            android:layout_width="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/question_content"
        android:layout_below="@+id/head"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">

        <!-- 问题正文 -->
        <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_above="@+id/question_choices_view"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:padding="1dp"
            android:background="#e7e7e7"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="4dp"
            >

            <RelativeLayout
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:background="#ffffff"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/question_kind_desc_text_view"
                    android:layout_height="30dp"
                    android:layout_width="wrap_content"
                    android:text="选择一个正确答案"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:textColor="#222"
                    />

                <com.eshare_android_preview.base.view.webview.EshareMarkdownView
                    android:layout_marginTop="30dp"
                    android:id="@+id/question_title"
                    text_size="16"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>

        <!-- 选项 -->
        <com.eshare_android_preview.base.view.QuestionChoicesView
            android:id="@+id/question_choices_view"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            />
    </RelativeLayout>

    <!-- 正确错误提示 -->
    <com.eshare_android_preview.base.view.QuestionResultView
        android:id="@+id/question_result_view"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:clickable="true"
        android:visibility="gone"
        />

    <!-- 提交按钮 -->
    <com.eshare_android_preview.base.view.ui.QuestionButton
        android:id="@+id/question_button"
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:padding="5dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>