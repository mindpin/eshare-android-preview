<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/body"
                android:background="@android:color/background_light">

    <include layout="@layout/cell_head_bar"/>

    <RelativeLayout
            android:id="@+id/user_msg"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_below="@+id/head_bar"
            android:background="#ffffdc">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="111dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/avatar_circle_padding"
                    android:padding="4dp">

                <ImageView
                        android:id="@+id/user_avatar"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="@string/image_description"/>
            </RelativeLayout>

            <TextView
                    android:id="@+id/user_name"
                    style="@style/text"
                    android:layout_width="fill_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="@string/placeholder"/>

            <!--
                 RelativeLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="#e0e0e0" /
            -->
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#e0e0e0"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/btn_group_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_msg"
            android:orientation="horizontal">

        <RelativeLayout
                android:id="@+id/home_button_plan"
                style="@style/home_button_layout">

            <TextView
                    style="@style/home_button_icon"
                    android:textColor="#4F9CD4"
                    android:text="@string/icon_list"/>

            <TextView
                    style="@style/home_button_text"
                    android:textColor="#fff"
                    android:text="学习计划"/>

            <RelativeLayout style="@style/bottom_1dp_border"/>

            <RelativeLayout style="@style/right_1dp_border"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/home_button_note"
                style="@style/home_button_layout">

            <TextView
                    style="@style/home_button_icon"
                    android:text="@string/icon_pencil"/>

            <TextView
                    style="@style/home_button_text"
                    android:text="笔记"/>

            <RelativeLayout style="@style/bottom_1dp_border"/>

            <RelativeLayout style="@style/right_1dp_border"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/home_button_fav"
                style="@style/home_button_layout">

            <TextView
                    style="@style/home_button_icon"
                    android:text="@string/icon_star"/>

            <TextView
                    style="@style/home_button_text"
                    android:text="收藏夹"/>

            <RelativeLayout style="@style/bottom_1dp_border"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/btn_group_2"
            android:layout_below="@+id/btn_group_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <RelativeLayout
                android:id="@+id/home_button_knowledge"
                style="@style/home_button_layout">

            <TextView
                    style="@style/home_button_icon"
                    android:text="@string/icon_leaf"/>

            <TextView
                    style="@style/home_button_text"
                    android:text="知识点"/>

            <RelativeLayout style="@style/bottom_1dp_border"/>

            <RelativeLayout style="@style/right_1dp_border"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/home_button_test"
                style="@style/home_button_layout">

            <TextView
                    style="@style/home_button_icon"
                    android:text="@string/icon_lightbulb"/>

            <TextView
                    style="@style/home_button_text"
                    android:text="练习题"/>

            <RelativeLayout style="@style/bottom_1dp_border"/>

            <RelativeLayout style="@style/right_1dp_border"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/home_button_group"
                style="@style/home_button_layout">

            <TextView
                    style="@style/home_button_icon"
                    android:text="@string/icon_group"/>

            <TextView
                    style="@style/home_button_text"
                    android:text="群组"/>

            <RelativeLayout style="@style/bottom_1dp_border"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>