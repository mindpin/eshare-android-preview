<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <include layout="@layout/cell_head_bar" />

    <RelativeLayout
        android:id="@+id/user_msg"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/head_bar">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:src="@drawable/bg_forest1"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:padding="15dp">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/avatar_home_circle_padding"
                    android:padding="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    >

                    <ImageView
                        android:id="@+id/user_avatar"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="@string/image_description" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/user_name"
                    style="@style/text"
                    android:width="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="15dp"
                    android:textSize="22dp"
                    android:gravity="left"
                    android:textColor="#fff"
                    android:text="@string/placeholder"
                    android:shadowColor="#000000"
                    android:shadowDy="1"
                    android:shadowDx="1"
                    android:shadowRadius="1"
                    />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/user_msg"
        android:orientation="vertical"
        android:background="#e7e7e7">

        <LinearLayout
            android:id="@+id/btn_group_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingRight="5dp">

            <RelativeLayout
                android:id="@+id/home_button_plan"
                style="@style/home_button_layout">

                <TextView
                    style="@style/home_button_icon"
                    android:text="@string/icon_list" />

                <TextView
                    style="@style/home_button_text"
                    android:text="学习计划" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_button_note"
                style="@style/home_button_layout">

                <TextView
                    style="@style/home_button_icon"
                    android:text="@string/icon_pencil" />

                <TextView
                    style="@style/home_button_text"
                    android:text="笔记" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_button_fav"
                style="@style/home_button_layout">

                <TextView
                    style="@style/home_button_icon"
                    android:text="@string/icon_star" />

                <TextView
                    style="@style/home_button_text"
                    android:text="收藏夹" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_group_2"
            android:layout_below="@+id/btn_group_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingRight="5dp">

            <RelativeLayout
                android:id="@+id/home_button_knowledge"
                style="@style/home_button_layout">

                <TextView
                    style="@style/home_button_icon"
                    android:text="@string/icon_leaf" />

                <TextView
                    style="@style/home_button_text"
                    android:text="知识点" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_button_test"
                style="@style/home_button_layout">

                <TextView
                    style="@style/home_button_icon"
                    android:text="@string/icon_lightbulb" />

                <TextView
                    style="@style/home_button_text"
                    android:text="练习题" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_button_group"
                style="@style/home_button_layout">

                <TextView
                    style="@style/home_button_icon"
                    android:text="@string/icon_group" />

                <TextView
                    style="@style/home_button_text"
                    android:text="群组" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>