<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/cell_head_bar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#1CB0F6"
        android:padding="0dp">

        <TextView
            android:id="@+id/question_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="-5dp"
            android:padding="0dp"
            android:text="@string/icon_question_circle"
            android:textSize="50dp"
            android:textColor="#D3EFF5"></TextView>

        <TextView
            style="@style/shadow_white_text_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/questions_desc"
            android:textColor="#fff"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="25dp"
            android:gravity="left|center"
            android:textSize="18dp" />

        <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:background="@drawable/bg_white_raduis_flat"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="100dp">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:paddingRight="40dp"
                >

                <ImageView
                    android:id="@+id/lan_icon"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:background="@drawable/lan_js"
                    />

                <TextView
                    android:layout_height="40dp"
                    android:layout_width="wrap_content"
                    android:text="JavaScript"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    />
                </LinearLayout>

            <com.eshare_android_preview.view.dialog.arc.ArcView
                android:layout_height="120dp"
                android:layout_width="120dp"
                arc_color="#1CB0F6"
                arc_width="15"
                arc_angle="216"
                android:background="@drawable/btn_light_blue_circle_flat"
                android:layout_marginTop="90dp"
                android:layout_centerHorizontal="true"
                android:padding="4dp"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:textSize="12dp"
                android:text="正确率"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:textSize="30dp"
                android:text="60%"
                />

            <TextView
                android:id="@+id/start_answer_tv"
                android:layout_height="40dp"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:textSize="20dp"
                android:background="@drawable/bg_question_blue_raduis_flat"
                android:text="开始答题"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="#fff"
                />


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>