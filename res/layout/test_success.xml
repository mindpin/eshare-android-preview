<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:background="#f1f1f1">

        <RelativeLayout
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_marginRight="90dp"
            android:layout_alignParentLeft="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/avatar"
                android:layout_height="30dp"
                android:layout_width="30dp" />

        </RelativeLayout>

        <com.eshare_android_preview.base.view.ExperienceView
            android:id="@+id/experience_view"
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:layout_marginLeft="40dp"
            android:fadingEdge="none" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="50dp"
        android:padding="5dp"
        android:background="#f1f1f1"
        >

        <com.eshare_android_preview.base.view.experience_chart_view.ExperienceChartView
            android:id="@+id/chart_view"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:padding="5dp"
        android:layout_alignParentBottom="true">

        <Button
            android:onClick="finish"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:background="@drawable/btn_c98cc27_circle_flat"
            android:text="继续"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#fff"
            android:shadowColor="#22000000"
            android:shadowRadius="1"
            android:shadowDx="1"
            android:shadowDy="1" />

    </RelativeLayout>
</RelativeLayout>

