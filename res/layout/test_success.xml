<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:background="#f1f1f1">

        <RelativeLayout
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_marginRight="90dp"
            android:layout_alignParentLeft="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/avatar"
                android:layout_height="30dp"
                android:layout_width="30dp" />

        </RelativeLayout>

        <com.eshare_android_preview.base.view.ExperienceView
            android:id="@+id/experience_view"
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:layout_marginLeft="40dp"
            android:fadingEdge="none" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_height="50dp"
        android:layout_width="fill_parent">

        <RelativeLayout
            android:id="@+id/added_exp_rl"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/text1"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="通过练习！经验值"
                android:gravity="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/added_exp"
                android:layout_toRightOf="@+id/text1"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="+10"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="70dp"
        android:padding="5dp">

        <com.eshare_android_preview.base.view.experience_chart_view.ExperienceChartView
            android:id="@+id/chart_view"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:padding="5dp"
        android:layout_alignParentBottom="true">

        <Button
            android:onClick="finish"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:background="@drawable/btn_c98cc27_circle_flat"
            android:text="继续"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#fff"
            android:shadowColor="#22000000"
            android:shadowRadius="1"
            android:shadowDx="1"
            android:shadowDy="1" />

    </RelativeLayout>
</RelativeLayout>

