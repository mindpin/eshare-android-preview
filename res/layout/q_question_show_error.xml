<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.eshare_android_preview.base.view.BorderRadiusRelativeLayout
        android:layout_height="80dp"
        android:layout_width="240dp"
        border_radius="3"
        border_radius_background_color="#b3a7a6"
        android:padding="1dp"
        android:layout_marginRight="-240dp"
        >

        <com.eshare_android_preview.base.view.BorderRadiusRelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            border_radius="2"
            border_radius_background_color="#FEEDEB"
            >

            <com.eshare_android_preview.base.view.ui.FontAwesomeTextView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:textColor="#A00D00"
                android:text="@string/icon_times"
                android:textSize="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#A00D00"
                android:text="答错了"
                android:textSize="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                />

        </com.eshare_android_preview.base.view.BorderRadiusRelativeLayout>

    </com.eshare_android_preview.base.view.BorderRadiusRelativeLayout>

</RelativeLayout>