<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.eshare_android_preview.base.view.BorderRadiusRelativeLayout
        border_radius_background_color="#0000aa"
        border_radius="10"
        border_top_left_radius="20"
        border_top_right_radius="2"
        border_bottom_right_radius="3"
        border_bottom_left_radius="0"
        android:layout_height="200dp"
        android:layout_width="200dp">
        <TextView
            android:text="123"
            android:textColor="#ffff11"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        </com.eshare_android_preview.base.view.BorderRadiusRelativeLayout>

    <TextView
        android:id="@+id/dash_path_view_info_tv"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <HorizontalScrollView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <RelativeLayout
            android:id="@+id/dash_path_view_parent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        </RelativeLayout>
    </HorizontalScrollView>
</LinearLayout>