<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <include layout="@layout/cell_head_bar"/>
    <RelativeLayout
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:layout_below="@+id/head_bar"
        android:id="@+id/shwo_itme_msg" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/node_name"
            style="@style/text"
            android:text="@string/placeholder" 
        />
        <TextView
            android:layout_below="@+id/node_name"
            android:id="@+id/node_desc"
            style="@style/text"
            android:text="@string/placeholder"
            android:layout_marginTop="10dp" 
        />
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_below="@+id/shwo_itme_msg"
	    android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <ListView 
		    android:id="@+id/child_list_view"
		    android:layout_width="0.0dip"
		    android:layout_height="fill_parent"
		    android:layout_weight="1.0"
		    android:layout_margin="5dp"
		/>
        
        <ListView 
		    android:id="@+id/parends_list_view"
		    android:layout_width="0.0dip"
		    android:layout_height="fill_parent"
		    android:layout_weight="1.0"
		    android:layout_margin="5dp"
		/>
    </LinearLayout>
	
</RelativeLayout>