<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <RelativeLayout
        android:id="@+id/about"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:background="#cc000000"
        android:layout_margin="4dp"
        android:paddingLeft="15dp"
        android:clickable="true"
        android:onClick="close_about"
        android:visibility="gone"
        >

        <TextView
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:text="四叶草知识手册·体验版"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:textSize="20dp"
             />

        <TextView
            android:layout_marginTop="50dp"
            android:layout_height="20dp"
            android:layout_width="fill_parent"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:text="eshare-android-preview"
             />

        <ImageView
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:src="@drawable/about_icon"
            android:layout_marginTop="90dp"
            />

        <TextView
            android:layout_height="60dp"
            android:layout_width="wrap_content"
            android:text="BUILD-20131230"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="80dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:id="@+id/about_design"
            android:layout_marginTop="170dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:text="原型程序开发"
                android:textColor="#fff"
                android:textSize="16dp"
                />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_height="20dp"
                android:layout_width="wrap_content"
                android:text="门旭"
                android:textColor="#ffffda"
                android:textSize="14dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/about_design"
            android:id="@+id/about_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:text="内容准备"
                android:textColor="#fff"
                android:textSize="16dp"
                />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_height="20dp"
                android:layout_width="wrap_content"
                android:text="黄锴，李飞，吴笛，肖少富，门旭"
                android:textColor="#ffffda"
                android:textSize="14dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/about_content"
            android:id="@+id/about_jicheng"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:text="产品集成"
                android:textColor="#fff"
                android:textSize="16dp"
                />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_height="20dp"
                android:layout_width="wrap_content"
                android:text="李飞，黄锴"
                android:textColor="#ffffda"
                android:textSize="14dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/about_jicheng"
            android:id="@+id/about_ui"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:text="界面和用户体验"
                android:textColor="#fff"
                android:textSize="16dp"
                />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_height="20dp"
                android:layout_width="wrap_content"
                android:text="宋亮"
                android:textColor="#ffffda"
                android:textSize="14dp"
                />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>