<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/cell_head_bar" />

    <LinearLayout
        android:layout_below="@+id/head_bar"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#e7e7e7"
        android:id="@+id/tab_message_area" >

        <TextView
            android:layout_height="120dp"
            android:layout_width="fill_parent"
            android:layout_margin="5dp"
            android:background="#fff"
            android:textSize="20dp"
            android:text="演示版没有这个功能"
            android:gravity="center"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/tab_message_area">

        <Button
            android:id="@+id/markdown_button"
            android:layout_height="80dp"
            android:layout_width="fill_parent"
            android:text="WebView Demo" />
        <Button
            android:id="@+id/dash_path_button"
            android:layout_height="80dp"
            android:layout_width="fill_parent"
            android:text="Dash Path Demo" />
        <Button
            android:id="@+id/to_first_btn"
            android:layout_height="80dp"
            android:layout_width="fill_parent"
            android:text="to_first_btn" />
    </LinearLayout>
</RelativeLayout>