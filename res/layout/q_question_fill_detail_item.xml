    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/fill_item_placeholder_bg"
        android:text="占位"
        android:textSize="20dp"
