<resources>
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>
	
    <!-- 公用 -->
    <!-- list 列表 中 item 点击时 携带 数据 -->
    <style name="base_list_view_info_tv">
        <item name="android:id">@id/info_tv</item>
        <item name="android:visibility">gone</item>
       	<item name="android:layout_width">fill_parent</item>
       	<item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- title_bar -->
    <style name="head_bar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/color_hard_bar_bg</item>
    </style>
    
    <style name="head_bar_text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">9dp</item>
    </style>
    
     <!-- base_login_layout -->
    <style name="login_layout_inputer">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_inputer_background</item>
    </style>
    
    <style name="login_layout_button" parent="@style/login_layout_inputer">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="main_head_bar_button">
        <item name="android:layout_width">54dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/v5_0_1_flipper_head_title_wrapper_background</item>
    </style>
    <style name="head_bar_button_go_back" parent="@style/main_head_bar_button">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:onClick">go_back</item>
        <item name="android:src">@drawable/go_back_up</item>
    </style>
    
    <style name="head_bar_button_right" parent="@style/head_bar_button">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">9dp</item>
    </style>
    <style name="head_bar_button">
        <item name="android:background">@drawable/bg_button_head_bar</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
    </style>
    
    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
    </style>
</resources>