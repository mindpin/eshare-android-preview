<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    	<item name="android:windowNoTitle">true</item>
    </style>
	
    <!-- 公用 -->
    <!-- list 列表 中 item 点击时 携带 数据 -->
    <style name="base_list_view_info_tv">
        <item name="android:id">@id/info_tv</item>
        <item name="android:visibility">gone</item>
       	<item name="android:layout_width">fill_parent</item>
       	<item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- title_bar -->
    <style name="head_bar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="head_bar_text">
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">9dp</item>
    </style>

    <!-- 首页按钮组 -->

    <style name="home_button_layout">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="home_button_icon">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#4F9CD4</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="home_button_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="right_1dp_border">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">#e0e0e0</item>
    </style>

    <style name="bottom_1dp_border">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">#e0e0e0</item>
    </style>

     <!-- base_login_layout -->
    <style name="login_layout_inputer">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_inputer_background</item>
    </style>
    
    <style name="login_layout_button" parent="@style/login_layout_inputer">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="head_bar_button_go_back">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:onClick">go_back</item>
        <item name="android:background">@drawable/btn_topbar_circle_flat</item>
        <item name="android:text">@string/icon_chevron_left</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingRight">1dp</item>
    </style>
    
    <style name="head_bar_button_setting">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:onClick">go_back</item>
        <item name="android:background">@drawable/btn_topbar_circle_flat</item>
        <item name="android:text">@string/icon_cog</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0.5dp</item>
    </style>
    
    <style name="head_bar_button_right" parent="@style/head_bar_button">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">9dp</item>
    </style>
    
    <style name="head_bar_button">
        <item name="android:background">@drawable/bg_button_head_bar</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
    </style>
    
    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
    </style>
    
    <!-- blog自定义的 progress_dialog 用于 正在登录 等场合 -->
    <style name="base_progress_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 标题栏 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 自身浮动 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 半透明的背景遮罩 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 无背景 -->

        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:background">@drawable/base_process_dialog_background</item>
    </style>
</resources>